#! /usr/bin/env python
import glob
import os
import sys


if __name__ == '__main__':
   os.system('clear')
   if 1 < len(sys.argv):
      target_directory = sys.argv[1]
   else:
      target_directory = ''

   total = 0
   for extension in ('.log', '.aux', '.synctex.gz'):
      path = os.path.join(target_directory, '*' + extension)
      files_to_remove = glob.glob(path)
      if files_to_remove:
         total += len(files_to_remove)
         os.system('rm ' + path)

   if total:
      print '%s files removed ...\n' % total