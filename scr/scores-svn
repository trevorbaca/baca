#! /usr/bin/env python

import os

SCORES = '/Users/trevorbaca/Documents/scores/'
os.system('clear')

print 'baca ...'
#os.system('svn st -u /Users/trevorbaca/Documents/baca')
BACA = os.environ.get('BACA')
os.system('svn st -u %s' % BACA)
print ''

dirs = (
   'desir',
   'territoires', 
   'manifolds', 
   'lidercfeny', 
   'sekka', 
   'cary',
   'hijinks', 
   'recursif')

for dir in dirs:
   print '%s ...' % dir
   os.system('svn st -u %s' % os.path.join(SCORES, dir))
   print ''
